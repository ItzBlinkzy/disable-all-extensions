{
    "name": "Disable All Extensions",
    "manifest_version": 3,
    "version": "1.1.1",
    "description": "Disable/Enable all installed chrome extensions with the click of a button.",
    "permissions": [
        "contextMenus",
        "management",
        "storage"
    ],
    "background": {
        "service_worker": "./src/background.js"
    },
    "icons": {
        "16": "./public/icon_16.png",
        "48": "./public/icon_48.png",
        "128": "./public/icon_128.png"
    },
    "action": {
        "default_icon": "./public/enabled_icon_16.png"
    },
    "author": "Blinkzy"
}